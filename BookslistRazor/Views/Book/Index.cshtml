@model IEnumerable<BookslistRazor.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-danger">Books List</h1>
            <a class="btn btn-sm btn-danger m-1" asp-controller="Book" asp-action="Create">Create</a>
            <p class="text-center text-danger">@TempData["error"]</p>
            <table class="table table-bordered">
                <tr class="text-info text-center">
                    <th>BookId</th>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Action</th>
                </tr>
                @foreach(var d in Model)
            {
            <tr class="text-center">
                <td>@d.Id</td>
          @*      <td>@d.Name</td>
                <td>@d.Author</td>*@
                <td>@d.ISBN</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Book" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                </td>
            </tr>
            }
            </table> 
        </div>
    </div>
</div>

